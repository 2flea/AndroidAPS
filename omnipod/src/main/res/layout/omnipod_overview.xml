<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:paddingTop="5dp"
        android:background="?attr/fragmentbackground"
        tools:context="info.nightscout.androidaps.plugins.pump.omnipod.ui.OmnipodFragment">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDanaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_more" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabDanaMenuUserOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/danar_useroptions"
        android:visibility="gone"
        app:icon="@drawable/ic_danarhistory"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/danar_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="150dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/stats"
        app:icon="@drawable/ic_cp_aaps_offline"
        android:visibility="gone"
        app:fabSize="auto" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/danar_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="220dp"
        android:text="@string/pumphistory"
        app:icon="@drawable/ic_danarstats"
        android:visibility="gone"
        app:fabSize="auto" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/danar_history1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="290dp"
        android:text="@string/pumphistory"
        app:icon="@drawable/ic_cp_bolus_correction"
        android:visibility="gone"
        app:fabSize="auto" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/danar_history2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="360dp"
        android:text="@string/pumphistory"
        app:icon="@drawable/ic_loop_disabled"
        android:visibility="gone"
        app:fabSize="auto" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/danar_history3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="360dp"
        android:text="@string/pumphistory"
        app:icon="@drawable/ic_local_activate"
        android:visibility="gone"
        app:fabSize="auto" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id = "@+id/swipeRefresh_omnipod"
